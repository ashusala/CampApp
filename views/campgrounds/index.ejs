<%- include ("../partials/header") %>

<div class="container">
    <header class = "jumbotron">
        <h1>Welcome to YelpCamp!</h1>
        <p>Find all campgrounds across the world</p>
        <p>
            <a class="btn btn-primary" href = "/campgrounds/new">Add new Campground!!</a>
        </p>
    </header>

    <div class="row">
        <div class ="col-lg-12">
            <h3>Our most popular sites</h3>
        </div>
    </div>
    
    <div class="row" style="display:flex;flex-wrap:wrap">
        <% campgrounds.forEach(function(campground){ %>
            <div class = "col-md-3 col-sm-6">
                <div class="img-thumbnail">
                    <img class = "img-fluid" src= "<%= campground.image %>" >
                    <div class="figure-caption text-center">
                        <h3><%= campground.name %></h3>
                    </div>
                    <div>
                        <a class="btn btn-primary btn-block" href = "/campgrounds/<%= campground._id %>" >More info</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>

</div>

<%- include ("../partials/footer") %>