<%- include ("../partials/header") %>

<div class = "container">
    <h1 style = "margin-top:1.7em; text-align:center">Edit the campground <%= campground.name %></h1>
    <div class="row">
        <div style = " width:30%; margin: 20px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method = "POST">
                <div class="form-group">
                    <input class = "form-control" type = "text" value = <%= campground.name %> name = "campname">
                </div>
                <div class="form-group">
                    <input class = "form-control" type = "number" value = "<%= campground.price %>" name = "price" min="0.01" step="0.01">
                </div>            

                <div class="form-group">
                    <input class = "form-control" type = "text" value = <%= campground.image %> name = "url">
                </div>        
                <div class="form-group">
                    <input class = "form-control" type = "text" value = <%= campground.description %> name = "desc">
                </div> 
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit</button>
                </div>
            </form>
            <a href = "/campgrounds">Go Back</a>
        </div>
    </div>
</div>


<%- include ("../partials/footer") %>