<%- include ("../partials/header") %>

<div class = "container">
    <h1 style = "margin-top:1.7em; text-align:center">Edit the comment</h1>
    <div class="row">
        <div style = " width:30%; margin: 20px auto;">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id%>?_method=PUT" method = "POST">
                <div class="form-group">
                    <input class = "form-control" type = "text" value = "<%= comment.text %>" name = "text">
                </div>            
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit</button>
                </div>
            </form>
            <a href = "/campgrounds/<%= campground_id %>">Go Back</a>
        </div>
    </div>
</div>

